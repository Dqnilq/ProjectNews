        <br>
        <h4 beautifront style="color: #6c757d">@Model.Blog.Content</h4>
    </div>
    <img class="mainimage bobamoba" src="@Model.Blog.Photoslink" width="450" height="300">
</div>
</main>



<div class="container">
</div>
